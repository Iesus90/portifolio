{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@shared/*": ["src/shared/*"],
      "@style*": ["src/style/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2019"
  },
  "exclude": ["node_modules"]
}
